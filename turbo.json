{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist"]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "outputs": [".cache/.eslintcache"],
      "outputLogs": "new-only"
    },
    "//#lint:root": {
      "outputs": [".cache/.eslintcache"],
      "outputLogs": "new-only"
    },
    "lint:fix": {
      "dependsOn": ["^lint:fix"],
      "outputs": [".cache/.eslintcache"],
      "outputLogs": "new-only"
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  },
  "ui": "tui",
  "cacheDir": ".turbo/cache"
}
