{
  "name": "@halvaradop/eslint-config",
  "version": "1.2.2",
  "private": false,
  "description": "Shared ESLint configuration for all @halvaradop projects.",
  "type": "module",
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup && pnpm clean:cts",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint . --cache --cache-location .cache/.eslintcache",
    "lint:fix": "eslint . --fix --cache --cache-location .cache/.eslintcache",
    "clean:cts": "rm -rf ./dist/*.d.cts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/halvaradop/configs.git"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/@halvaradop/eslint-config"
  },
  "keywords": [
    "eslint",
    "config",
    "halvaradop",
    "code-style",
    "linting"
  ],
  "author": "Hernan Alvarado <hernanvid123@gmail.com>",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "exports": {
    "./base": {
      "types": "./dist/base.d.ts",
      "require": "./dist/base.cjs",
      "import": "./dist/base.js"
    },
    "./typescript": {
      "types": "./dist/typescript.d.ts",
      "require": "./dist/typescript.cjs",
      "import": "./dist/typescript.js"
    },
    "./react": {
      "types": "./dist/react.d.ts",
      "require": "./dist/react.cjs",
      "import": "./dist/react.js"
    },
    "./nextjs": {
      "types": "./dist/next.d.ts",
      "require": "./dist/next.cjs",
      "import": "./dist/next.js"
    },
    "./prettier": {
      "types": "./dist/prettier.d.ts",
      "require": "./dist/prettier.cjs",
      "import": "./dist/prettier.js"
    },
    "./turbo": {
      "types": "./dist/turbo.d.ts",
      "require": "./dist/turbo.cjs",
      "import": "./dist/turbo.js"
    }
  },
  "dependencies": {
    "@eslint/js": "^9.34.0",
    "@next/eslint-plugin-next": "^15.5.2",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-only-warn": "^1.1.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-turbo": "^2.5.6",
    "globals": "^16.3.0",
    "typescript-eslint": "^8.41.0"
  },
  "devDependencies": {
    "eslint": "^9.34.0",
    "@halvaradop/tsup-config": "workspace:*"
  },
  "peerDependencies": {
    "eslint": "^9.0.0"
  }
}
